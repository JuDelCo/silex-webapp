{% extends "layout.twig" %}

{% set header_title = "Error" %}

{% block header_css_alt %}
	<style>

		.alert
		{ 
			width: 90%;
			margin: 25px auto;
			padding: 15px 35px 15px 28px;
		}

	</style>
{% endblock header_css_alt %}

{% block body_header %}
	{% embed "menu.twig" %}
		{% block menu_alt_left_html %}
			<li>
				<a class="info-label">Error</a>
			</li>
		{% endblock menu_alt_left_html %}
	{% endembed %}
{% endblock body_header %}

{% block body_container %}
	<div class="alert alert-danger" style="border: 1px solid #CCCCCC;">
		<span class="glyphicon glyphicon-info-sign"></span>
		&nbsp;{{ mensaje|default('Ha ocurrido un error. Por favor vuelva a intentarlo m√°s tarde.') }}
	</div>
{% endblock body_container %}
